generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Products {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  price       Float
  stock       Int
  material    String
  category    String
  gender      String
  size        String
  color       String
  brand       String
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("products")
}

model Search {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  search         String
  token_search   Int
  response       String
  token_response Int
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("search")
}
